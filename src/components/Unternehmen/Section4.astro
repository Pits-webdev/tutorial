---
import Link from "../ui/Link.astro";
---

<section class="w-full relative mt-28">
  <img
    class="w-full max-h-[800px] object-cover"
    src="/images/Image.webp"
    alt="image"
  />
  <div class="w-full absolute top-1/2 left-0 -translate-y-1/2">
    <div class="container mx-auto
    flex flex-col z-[1]">
      <div class="max-w-[680px]">
        <span class="text-6xl">#</span>

        <p class="text-5xl">
          Ich liebe den Geist der Zusammenarbeit, die Innovation und die
          Wachstumsmöglichkeiten hier.
        </p>

        <div class="flex gap-x-4 mt-16 mb-28">
          <img
            class="rounded-full w-10 h-10"
            src="/images/defaultUser.jpg"
            alt="picture"
          />
          <span class="inline-block">
            <p>Max Musterman</p>
            <p class="text-sm">Geschäftsführer</p>
          </span>
        </div>

        <Link
          title="offene Stellen"
          path="/kontakt"
          style="px-8 py-2 ring-1 ring-primary rounded-xl"
        />
      </div>
    </div>
  </div>
</section>
